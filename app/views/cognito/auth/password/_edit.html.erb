<%= form_for("user", :url => recover_password_path) do |f| %>
  <div><%= f.label :confirmation_code %><br />
  <%= f.text_field :confirmation_code, :class => "form-control" %></div> <br />
  <div><%= f.label :password %><br />
  <%= f.password_field :password, :class => "form-control" %></div> <br />
  <div><%= f.submit "Change Password", :class => "btn btn-primary"%></div>
<% end %>
