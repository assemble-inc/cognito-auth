<!DOCTYPE html>
<html>
<head>
  <title>Cognito auth</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "cognito/auth/application", media: "all" %>
  <%= javascript_include_tag "cognito/auth/application" %>
</head>
<body>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%=key%>">
      <%=value%>
    </div>
  <% end %>
  <%= yield %>

</body>
</html>
